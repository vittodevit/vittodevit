name: GitHub metrics as HTML Insights page
on:
  push:
    branches:
    - main
  schedule: [{cron: "0 22 * * *"}]
jobs:
  github-metrics:
    runs-on: ubuntu-latest
    steps:
      - uses: lowlighter/metrics@latest
        with:
          token: ${{ secrets.TOKEN }}
          user: vittodevit
          config_output: insights
          